{
  "private": true,
  "workspaces": [
    "packages/*",
    "example"
  ],
  "author": "nju33 <nju33.ki@gmail.com>",
  "license": "MIT",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "*.{js,ts}": [
        "eslint --fix",
        "git add"
      ],
      "*.{html,md,yml,json}": [
        "prettier --write",
        "git add"
      ]
    }
  },
  "scripts": {
    "docs": "lerna exec --scope gsw -- yarn typedoc",
    "publish": "lerna publish",
    "branch.update:codesandbox": "gh-pages --dist example --branch codesandbox --dotfiles",
    "test": "lerna exec -- yarn test"
  },
  "devDependencies": {
    "@nju33/prettier": "0.0.26",
    "@nju33/tslint": "0.0.26",
    "@types/jest": "23.3.14",
    "@typescript-eslint/eslint-plugin": "4.31.1",
    "@typescript-eslint/parser": "4.31.1",
    "eslint": "5.16.0",
    "eslint-config-prettier": "4.3.0",
    "eslint-config-xo-space": "0.29.0",
    "eslint-plugin-jest": "22.21.0",
    "eslint-plugin-prettier": "3.4.1",
    "gh-pages": "2.2.0",
    "husky": "1.3.1",
    "jest": "23.6.0",
    "lerna": "3.22.1",
    "lint-staged": "8.2.1",
    "prettier": "1.19.1",
    "renovate-config-nju33": "0.0.1",
    "tslint": "5.20.1",
    "typescript": "3.4.5"
  }
}
